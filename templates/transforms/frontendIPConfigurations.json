{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "state": {
            "type": "array",
            "defaultValue": []
        },
        "source": {
            "type": "object"
        },
        "applicationGatewayID": {
            "type": "string"
        }
    },
    "variables": {
        "appGwPublicIPRef": "[resourceId('Microsoft.Network/publicIPAddresses',parameters('source').publicIpName)]",
        "instance": [
            {
                "name": "[parameters('source').name]",
                "properties": {
                    "PublicIPAddress": {
                        "id": "[variables('appGwPublicIPRef')]"
                    }
                }
            }
        ]
    },
    "resources": [],
    "outputs": {
        "collection": {
            "type": "array",
            "value": "[concat(parameters('state'), variables('instance'))]"
        }
    }
}