{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "state": {
            "type": "array",
            "defaultValue": []
        },
        "source": {
            "type": "object"
        },
        "applicationGatewayID": {
            "type": "string"
        }
    },
    "variables": {
        "instance": [
            {
                "name": "[parameters('source').name]",
                "properties": {
                    "defaultBackendAddressPool": {
                        "id": "[concat(parameters('applicationGatewayID'), '/backendAddressPools/', parameters('source').defaultBackendAddressPool)]"
                    },
                    "defaultBackendHttpSettings": {
                        "id": "[concat(parameters('applicationGatewayID'), '/backendHttpSettingsCollection/', parameters('source').defaultBackendHttpSettings)]"
                    },
                    "pathRules": "[[if(bool('true')), json('[]'), variables('pathRules'))]"
                }
            }
        ],
        "copy": [
            {
                "name": "pathRules",
                "count": "[if(bool('true')), 1, length(parameters('source').pathRules))]",
                "input": {
                    "name": "[if(bool('true')), '1', parameters('source').pathRules[copyIndex('pathRules')].name)]",
                    "properties": {
                        "backendAddressPool": {
                            "id": "[concat(parameters('applicationGatewayID'), '/backendAddressPools/', if(bool('true')), 0), '', parameters('source').pathRules[copyIndex('pathRules')].backendAddressPool))]"
                        },
                        "backendHttpSettings": {
                            "id": "[concat(parameters('applicationGatewayID'), '/backendHttpSettingsCollection/', if(bool('true')), 0), '', parameters('source').pathRules[copyIndex('pathRules')].backendHttpSettings))]"
                        },
                        "paths": "[if(bool('true')), 0), '', parameters('source').pathRules[copyIndex('pathRules')].paths)]"
                    }
                }
            }
        ]
    },
    "resources": [],
    "outputs": {
        "collection": {
            "type": "array",
            "value": "[concat(parameters('state'), variables('instance'))]"
        }
    }
}